doctype html
html
	head
		title=title

	block body
		h1= text

		button(onclick="move1()") Home
		br
		button(onclick="move2()") Inbox
		br
		button(onclick="move3()") Compose
		br
		button(onclick="move4()") Sent

		ul
			each item in messages
				li= item.envelope.subject

script.
	function move1() {
		window.location.href = '/home'
	}
	function move2() {
		window.location.href = '/inbox'
	}
	function move3() {
		window.location.href = '/compose'
	}
	function move4() {
		window.location.href = '/sent'
	}

html
	body
		include


	mixin mail(title, Description, subject)
		.mail
			.mail__wrapper
				.mail__content
					h2.mail__title #{title}
					p.mail__subject #{subject}
					p.mail__Description #{Description}

	.mails
		+mail( "Anderson", "how far have you gotten with the email?", "Progress on the email")
