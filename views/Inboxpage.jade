doctype html
html
	head
		title= title
		link(rel= "stylesheet" href= "/stylesheets/InboxStyle.css")
		
	

	block body
	
	h1= text
	
	
	button(onclick="move1()") Home
	
	button(onclick="move2()") Inbox
	
	button(onclick="move3()") Compose
	
	button(onclick="move4()") Sent

	<div clas= "col">
	<p>Sender</p>
	<p>Subject</p>
	<p>Attachment</p>
	<p>Brief body</p>
	</div>
			
	
		
script.
	function move1() {
		window.location.href = '/home'
	}
	function move2() {
		window.location.href = '/inbox'
	}
	function move3() {
		window.location.href = '/compose'
	}
	function move4() {
		window.location.href = '/sent'
	}

	

	