doctype html
html
	head
		link(rel='stylesheet', href='/stylesheets/ComposeStyle.css')
		title= title 
		
	block body
		h1= text
		container

		button(onclick="move1()") Home
		
		button(onclick="move2()") Inbox
		
		button(onclick="move3()") Compose
		
		button(onclick="move4()") Sent
		
		
		h2 
		<div> 
		<p>
		form(method='POST', action='/send')
			input#Email(type="text", name="Email")
			br
			input#Subject(type="text", name="Subject")
			br
			input#BODY(type="text", name="Body")
		
			br
			button(type='submit') Submit
		</p>
		</div>
		
script.
	function move1() {
		window.location.href = '/home'
	}
	function move2() {
		window.location.href = '/inbox'
	}
	function move3() {
		window.location.href = '/compose'
	}
	function move4() {
		window.location.href = '/sent'
	}